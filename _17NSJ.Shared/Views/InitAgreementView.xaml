<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="_17NSJ.Views.InitAgreementView" xmlns:cont="clr-namespace:_17NSJ.Controls">
    <Grid>         
        <!-- Background -->         
        <Image Aspect="AspectFill" Source="agreement_back.png" />         
       
        <ScrollView>
            <StackLayout>
                <StackLayout.Padding>
                    <OnPlatform x:TypeArguments="Thickness" iOS="0, 50, 0, 0" Android="0, 0, 0, 0" />
                </StackLayout.Padding>
                <Image Source="outline_logo.png" Margin="40,30,40,0" />
                <cont:ImageButton Source="agree_button.png" Tapped="AgreeButtonClicked" Margin="40,30,40,0" AutomationId="InitAgreementView.Agree" />
                <cont:ImageButton Source="agreement_button.png" Tapped="ViewAgreementClicked" Margin="40,30,40,0" AutomationId="InitAgreementView.Agreement" />
                <cont:ImageButton Source="policy_button.png" Tapped="ViewPolicyClicked" Margin="40,0,40,30" AutomationId="InitAgreementView.Policy" />
            </StackLayout>
        </ScrollView>    
    </Grid> 
</ContentPage>
