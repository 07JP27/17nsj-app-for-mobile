<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="_17NSJ.Views.SocialView">
    <StackLayout>
        <Label Text="OFFICIAL SOCIAL MEDIA" FontSize="28" HorizontalOptions="Center" HeightRequest="60" TextColor="Gray" VerticalTextAlignment="Center" />
        <ListView ItemsSource="{Binding SocialList}" ItemTapped="ItemSelected" RowHeight="70">
            <ListView.ItemTemplate>
              <DataTemplate>
                <ViewCell Height="200">
                    <StackLayout Orientation="Horizontal">
                        <Image Source="{Binding ImagePath}" Margin="20,10"/>
                        <Label Text="{Binding Title}" VerticalTextAlignment="Center" FontSize="30" TextColor="Gray" />
                    </StackLayout>
                </ViewCell>
              </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
