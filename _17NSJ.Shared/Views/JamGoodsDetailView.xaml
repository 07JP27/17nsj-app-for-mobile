<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_17NSJ.Views.JamGoodsDetailView">
    <ScrollView>
        <StackLayout>
            <Image Margin="0,10,0,0" HeightRequest="200" x:Name="image" Source="https://placehold.jp/400x400.png" />
            <Label FontSize="20" x:Name="name" HorizontalTextAlignment="Center" />
            <Image Source="shop_unknown.png" x:Name="stockImage" />
            <Label TextColor="#95989A" x:Name="stockUpdatedAt" FontSize="10"  HorizontalTextAlignment="Center" />
            <Label TextColor="#95989A" x:Name="price" Margin="50,10,50,0" />
            <Label TextColor="#95989A" x:Name="id" Margin="50,10,50,0" />
            <Label TextColor="#95989A" x:Name="size" Margin="50,0,50,0" />
            <Label TextColor="#95989A" x:Name="description" Margin="50,0,50,0" />
        </StackLayout>
    </ScrollView>
</ContentPage>
