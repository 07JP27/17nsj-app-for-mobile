<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="_17NSJ.Views.MasterDetailView">

    <!--MasterPageの設定-->
    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <ContentPage.Padding>
                <OnPlatform x:TypeArguments = "Thickness" iOS = "0, 20, 0, 0" />
            </ContentPage.Padding>
            <StackLayout HorizontalOptions="Center">
                <ListView x:Name="listView" ItemSelected="Handle_ItemSelected" SeparatorVisibility="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ImageCell Text="{Binding Title}" ImageSource="{Binding IconSource}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>

    <!--DetailPageの設定-->
    <MasterDetailPage.Detail>
    </MasterDetailPage.Detail>
</MasterDetailPage>
